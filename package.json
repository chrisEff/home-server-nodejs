{
	"name": "home-server",
	"version": "1.0.0",
	"description": "My own little home automation API for controlling lights, power outlets, shutters, etc.",
	"keywords": [
		"smarthome",
		"homeautomation"
	],
	"main": "index.js",
	"author": "chrisEff",
	"license": "MIT",
	"repository": "github:chrisEff/home-server-nodejs",
	"scripts": {
		"postinstall": "cp -n ./config.sample.js ./config.js || true",
		"start": "bash -c \"exec -a homeserver node index.js >> logs.txt &\"",
		"stop": "pkill -f homeserver",
		"status": "ps axu | grep -e homeserver -e RFSniffer | grep -v grep || echo not running",
		"test": "mocha --recursive test",
		"cover": "nyc npm test",
		"coveralls": "nyc npm test && ./node_modules/.bin/nyc report --reporter=text-lcov | coveralls",
		"eslint": "eslint index.js src test",
		"allow-portbind": "sudo setcap 'cap_net_bind_service=+ep' `which node`"
	},
	"dependencies": {
		"aws-sdk": "^2.573.0",
		"child-process-promise": "^2.2.1",
		"dateformat": "^3.0.3",
		"dhcp-spy": "^1.0.0",
		"fs-extra": "^8.1.0",
		"lodash.debounce": "^4.0.8",
		"lodash.get": "^4.4.2",
		"lodash.sortby": "^4.7.0",
		"node-coap-client": "^1.0.2",
		"node-cron": "^2.0.3",
		"restify": "^8.4.0",
		"restify-await-promise": "^2.2.0",
		"restify-cors-middleware": "^1.1.1",
		"restify-errors": "^8.0.1",
		"restify-router": "^0.5.1",
		"wemore": "^0.6.1",
		"winston": "^3.2.1",
		"winston-logzio": "^5.0.3"
	},
	"devDependencies": {
		"@chriseff/eslint-config": "^2.0.0",
		"@types/chai": "^4.2.5",
		"@types/chai-as-promised": "^7.1.2",
		"@types/mocha": "^5.2.7",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"coveralls": "^3.0.6",
		"deep-freeze-strict": "^1.1.1",
		"eslint": "^6.6.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-mocha": "^6.2.1",
		"eslint-plugin-node": "^10.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"husky": "^3.0.9",
		"lint-staged": "^9.4.3",
		"mocha": "^6.2.1",
		"nyc": "^14.1.1",
		"sinon": "^7.5.0"
	},
	"standard": {
		"env": [
			"mocha"
		]
	},
	"nyc": {
		"include": "src"
	},
	"lint-staged": {
		"*.js": "eslint"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
