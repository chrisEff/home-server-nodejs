{
	"name": "home-server",
	"version": "1.0.0",
	"description": "My own little home automation API for controlling lights, power outlets, shutters, etc.",
	"keywords": [
		"smarthome",
		"homeautomation"
	],
	"main": "index.js",
	"author": "chrisEff",
	"license": "MIT",
	"repository": "github:chrisEff/home-server-nodejs",
	"scripts": {
		"postinstall": "cp -n ./config.sample.js ./config.js || true",
		"start": "bash -c \"exec -a homeserver node index.js >> logs.txt &\"",
		"stop": "pkill -f homeserver",
		"status": "ps axu | grep -e homeserver -e RFSniffer | grep -v grep || echo not running",
		"test": "mocha --recursive test",
		"cover": "nyc npm test",
		"coveralls": "nyc npm test && ./node_modules/.bin/nyc report --reporter=text-lcov | coveralls",
		"eslint": "eslint index.js src test",
		"allow-portbind": "sudo setcap 'cap_net_bind_service=+ep' `which node`"
	},
	"dependencies": {
		"aws-sdk": "^2.407.0",
		"child-process-promise": "^2.2.1",
		"dateformat": "^3.0.3",
		"dhcp-spy": "^1.0.0",
		"fs-extra": "^7.0.1",
		"lodash.debounce": "^4.0.8",
		"lodash.get": "^4.4.2",
		"lodash.sortby": "^4.7.0",
		"node-coap-client": "^1.0.2",
		"node-cron": "^2.0.3",
		"restify": "^7.7.0",
		"restify-await-promise": "^2.1.0",
		"restify-cors-middleware": "^1.1.1",
		"restify-errors": "^6.1.1",
		"restify-router": "^0.5.1",
		"wemore": "^0.6.1",
		"winston": "^3.2.1",
		"winston-logzio": "^4.0.1"
	},
	"devDependencies": {
		"@chriseff/eslint-config": "^1.0.2",
		"@types/chai": "^4.1.7",
		"@types/chai-as-promised": "^7.1.0",
		"@types/mocha": "^5.2.6",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"coveralls": "^3.0.2",
		"deep-freeze-strict": "^1.1.1",
		"eslint": "^5.14.1",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-node": "^8.0.1",
		"eslint-plugin-promise": "^4.0.1",
		"eslint-plugin-standard": "^4.0.0",
		"mocha": "^6.0.0",
		"nyc": "^13.3.0",
		"sinon": "^7.2.4"
	},
	"standard": {
		"env": [
			"mocha"
		]
	},
	"nyc": {
		"include": "src"
	}
}
