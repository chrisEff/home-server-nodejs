{
	"name": "home-server",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"postinstall": "cp -n ./config.sample.js ./config.js || true",
		"start": "bash -c \"exec -a homeserver node index.js >> logs.txt &\"",
		"stop": "pkill -f homeserver",
		"status": "ps axu | grep -e homeserver -e RFSniffer | grep -v grep || echo not running",
		"test": "mocha --recursive test",
		"cover": "nyc npm test",
		"coveralls": "nyc npm test && ./node_modules/.bin/nyc report --reporter=text-lcov | coveralls",
		"eslint": "eslint src test",
		"allow-portbind": "sudo setcap 'cap_net_bind_service=+ep' `which node`"
	},
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git@github.com:chrisEff/home-server-nodejs.git"
	},
	"dependencies": {
		"aws-sdk": "^2.361.0",
		"child-process-promise": "^2.2.1",
		"dateformat": "^3.0.3",
		"dhcp-spy": "^1.0.0",
		"fauxmojs": "^1.0.3",
		"fs-extra": "^7.0.1",
		"lodash.debounce": "^4.0.8",
		"lodash.get": "^4.4.2",
		"node-cron": "^2.0.3",
		"restify": "^7.2.3",
		"restify-await-promise": "^2.1.0",
		"restify-cors-middleware": "^1.1.1",
		"restify-errors": "^6.1.1",
		"restify-router": "^0.5.1",
		"winston": "^3.1.0"
	},
	"devDependencies": {
		"@chriseff/eslint-config": "^1.0.2",
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.5",
		"chai": "^4.2.0",
		"coveralls": "^3.0.2",
		"deep-freeze-strict": "^1.1.1",
		"eslint": "^5.9.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-node": "^8.0.0",
		"eslint-plugin-promise": "^4.0.1",
		"eslint-plugin-standard": "^4.0.0",
		"lodash.sortby": "^4.7.0",
		"mocha": "^5.2.0",
		"nyc": "^13.1.0",
		"sinon": "^7.1.1"
	},
	"standard": {
		"env": [
			"mocha"
		]
	},
	"nyc": {
		"include": "src"
	}
}
